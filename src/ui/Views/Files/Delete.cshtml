@model File_Access_Monitoring.Models.FileDoc

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex align-items-center">
    <h6 class="flex-fill">Confirm Delete File</h6>
    <a class="btn btn-success" asp-action="Index">Back </a>
</div>

<hr />


<div class="container">
    <div class="card">
        <div class="card-body">
            <h4>File</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FileName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FileName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedOn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Link)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Link)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DownloadCount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DownloadCount)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="FID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
   
    
   
</div>
